<h1><%= pluralize(@movies.size, 'Movie') %></h1>
<%= link_to 'New Movie', new_movie_path %>
<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to(movie.title, movie) %></h2>
      <%= image_for(movie) %>
    </header>
    <p>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Release Date:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Edit', edit_movie_path(movie) %>
          <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    </table>
  </article>
<% end %>
